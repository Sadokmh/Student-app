<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="60dp">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    >



                    <ImageView
                        android:id="@+id/profilePhoto"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/sadok"/>

                    <LinearLayout
                        android:id="@+id/editProfileLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:padding="5dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modifier votre profil"
                            android:padding="5dp"
                            android:textSize="10dp"
                            android:textColor="@color/colorPrimary"/>

                        <ImageView
                            android:id="@+id/editProfile"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_edit"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_brightness_1_black_24dp"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_school_black_24dp"
                            />

                        <TextView
                            android:id="@+id/profileFiliere"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 LFIG"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:textSize="16dp"/>


                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_brightness_1_black_24dp"
                            android:layout_marginLeft="20dp"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_group_black_24dp"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:id="@+id/profileGroupe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Groupe 4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:textSize="16dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp">

                        <ImageView
                            android:layout_width="7dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_brightness_1_black_24dp"
                            android:layout_marginRight="10dp"/>


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_email_black_24dp"
                            android:layout_marginTop="1dp"
                            />

                        <TextView
                            android:id="@+id/profileEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sadokmhiri@gmail.com"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:textSize="16dp"/>

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/profileRv"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    </FrameLayout>



