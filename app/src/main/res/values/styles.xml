<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorHighlight</item>
    </style>


    <style name="ToolbarColoredBackArrow" parent="AppTheme.Base">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- textInputLayout theme -->
    <style name="textInputLay">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorHighlight</item>
    </style>

    <style name="progressStyle">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>

</resources>
